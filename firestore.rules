rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
  
    // Allow anyone to read any document
    match /{document=**} {
      allow read: if true;
    }
  
    // Allow only users with "uploader" or "admin" roles to write
    match /{document=**} {
      allow write: if request.auth != null && 
                    (request.auth.token.role == 'uploader' || request.auth.token.role == 'admin');
    }
  }
}
